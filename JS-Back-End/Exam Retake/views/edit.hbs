<section id="create-section">

  <h1 class="item">Edit Auction</h1>

  <div class="item padded align-center">
    {{#with post}}
      <form class="layout left large" method="POST" action="/edit/{{_id}}">

        <div class="col aligned">
          <label>
            <span>Title</span>
            <input
              type="text"
              id="title"
              name="title"
              value="{{title}}"
            /></label>
          <label>
            <span>Category</span>
            <select name="category" id="category" defaultValue="{{category}}">
              <option value="estate">Real Estate</option>
              <option value="vehicles">Vehicles</option>
              <option value="furniture">Furniture</option>
              <option value="electronics">Electronics</option>
              <option value="other">Other</option>
            </select>
          </label>
          <label>
            <span>Image URL</span>
            <input
              type="text"
              id="imageURL"
              name="imageURL"
              value="{{imageURL}}"
            />
          </label>
          <label>
            <span>Starting price</span>

            <!-- If the current auction has a bidder, this input field should be disabled -->
            <input type="number" name="price" id="price" value="{{price}}" />
          </label>
        </div>

        <div class="content pad-med align-center vertical">
          <label>
            <span>Description</span>
            <textarea id="description" name="description">{{description}}
            </textarea>
          </label>

          <div class="align-center">
            <input class="action" type="submit" value="Update Listing" />
          </div>
        </div>

      </form>
    {{/with}}

  </div>

</section>